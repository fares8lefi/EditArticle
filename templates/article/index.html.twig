{% extends 'base.html.twig' %}
{% block title%}
	liste des article
{% endblock %}
{% block body %}
	{% if articles %}
		<table id='artricle' class="table table-striped">
			<thead>
				<tr>
					<th>
						article
					</th>
					<th>
						prix
					</th>
					<th>
						Categorie
					</th>

					<th>
						action
					</th>
				</tr>
			</thead>
			<tbody>
{% for article in articles %}
	<tr>
		<td>{{ article.nom }}</td>
		<td>{{ article.prix }}</td>
		<td>
			{% if article.category is not null %}
				{{ article.category.titre }}
			{% else %}
				Catégorie non définie
			{% endif %}
		</td>
		<td>
           <a href="/article/{{ article.id }}" class="btn btn-info">Détails</a>
           <a href="/article/edit/{{ article.id }}" class="btn btn-info">Modifier</a>
		   <a href="/article/delete/{{ article.id }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ?');">Supprimer</a>
		</td>
	</tr>
{% endfor %}


			</tbody>
		</table>

	{% else %}
		<p>
			aucun article
		</p>
	{% endif %}


{% endblock %}
